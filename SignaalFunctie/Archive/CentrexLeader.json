    "rowFormatter": {
      "elmType": "div",
      "attributes": {
        "class": "ms-borderColor-neutralLight"
      },
      "style": {
        "position": "relative",
        "border-width": "1px",
        "border-radius": "5px",
        "border-style": "solid",
        "width": "1000px",
        "display": "block",
        "margin-bottom": "5px",
        "margin-top": "=if(@rowIndex == 0, '15px','0')",
        "box-shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1),0 2px 4px -1px rgba(0, 0, 0, 0.06)"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "display": "flex",
            "position": "absolute",
            "z-index": "30",
            "top": "10px",
            "right": "5px",
            "flex-direction": "row",
            "padding": "5px 10px",
            "border-radius": "20px",
            "outline": "1px solid #333399",
            "margin-bottom": "5px",
            "align-items": "center",
            "cursor": "pointer"
          },
          "attributes": {
            "class": "ms-bgColor-themeDarker ms-bgColor-white--hover sp-css-color-themePrimary sp-css-color-white--hover"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "position": "absolute",
                "width": "100%",
                "height": "100%",
                "border-radius": "20px",
                "margin-left": "-10px",
                "opacity": "0",
                "z-index": "31"
              },
              "customCardProps": {
                "formatter": {
                  "elmType": "div",
                  "style": {
                    "background-color": "white"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "style": {
                        "width": "200px",
                        "height": "100px",
                        "border": "rounded",
                        "border-radius": "10px",
                        "font-size": "12pt",
                        "padding": "10px",
                        "display": "flex",
                        "flex-direction": "column",
                        "justify-content": "space-evenly",
                        "align-items": "center"
                      },
                      "children": [
                        {
                          "elmType": "span",
                          "txtContent": "Send to DirCom?",
                          "style": {
                            "padding": "3px",
                            "width": "auto"
                          }
                        },
                        {
                          "elmType": "div",
                          "style": {
                            "display": "flex",
                            "justify-content": "center",
                            "width": "100%",
                            "background-color": "white"
                          },
                          "children": [
                            {
                              "elmType": "div",
                              "txtContent": "Add status: For DirCom",
                              "style": {
                                "display": "flex",
                                "padding": "5px 10px",
                                "border-radius": "20px",
                                "outline": "2px solid #333399",
                                "font-size": "16px",
                                "cursor": "pointer"
                              },
                              "customRowAction": {
                                "action": "setValue",
                                "actionInput": {
                                  "Status": "=appendTo([$Status_x0028_National_x0029_], 'For DirCom')"
                                }
                              },
                              "attributes": {
                                "class": "ms-bgColor-themeDarker ms-bgColor-white--hover sp-css-color-themePrimary sp-css-color-white--hover"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                "openOnEvent": "click",
                "directionalHint": "bottomCenter",
                "isBeakVisible": true
              }
            },
            {
              "elmType": "span",
              "attributes": {
                "iconName": "ReceiptCheck"
              },
              "style": {
                "position": "relative",
                "font-weight": "bold",
                "padding-right": "5px",
                "font-size": "16px"
              }
            },
            {
              "elmType": "span",
              "txtContent": "DirCom",
              "style": {
                "position": "relative"
              }
            }
          ]
        },
        {
          "elmType": "div",
          "style": {
            "position": "relative",
            "z-index": "5",
            "border-radius": "5px",
            "text-decoration": "none",
            "outline": "none",
            "cursor": "pointer"
          },
          "attributes": {
            "class": "ms-bgColor-white ms-bgColor-communicationTint40--hover ms-borderColor-neutralLight ms-borderColor-neutralTertiary--hover"
          },
          "customRowAction": {
            "action": "defaultClick"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "position": "absolute",
                "bottom": "10px",
                "left": "130px",
                "display": "flex",
                "flex-flow": "row nowrap",
                "margin-top": "20px"
              },
              "children": [
                {
                  "elmType": "div",
                  "forEach": "topic in [$Topic]",
                  "style": {
                    "display": "flex",
                    "flex-flow": "row nowrap"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "style": {
                        "display": "flex",
                        "flex-direction": "row",
                        "padding": "5px 10px",
                        "border-radius": "20px",
                        "margin-right": "15px",
                        "align-items": "center"
                      },
                      "attributes": {
                        "class": "=if(indexOf([$topic], 'Drugs') >= 0, 'ms-bgColor-neutralLight', if(indexOf([$topic], 'Organised Crime') >= 0, 'ms-bgColor-success', if(indexOf([$topic], 'Human Trafficking') >= 0, 'ms-bgColor-error',if(indexOf([$topic], 'Property Crime') >= 0, 'ms-bgColor-communicationTint40', 'ms-bgColor-warning'))))"
                      },
                      "children": [
                        {
                          "elmType": "span",
                          "attributes": {
                            "class": "=if(indexOf([$topic], 'Drugs') >= 0, 'sp-css-color-neutralPrimary', if(indexOf([$topic], 'Organised Crime') >= 0, 'sp-css-color-neutralPrimary', if(indexOf([$topic], 'Human Trafficking') >= 0, 'sp-css-color-neutralPrimary', if(indexOf([$topic], 'Property Crime') >= 0, 'sp-css-color-neutralPrimary', 'sp-css-color-themeDarker'))))",
                            "iconName": "WebAppBuilderFragment"
                          },
                          "style": {
                            "padding-right": "5px"
                          }
                        },
                        {
                          "elmType": "span",
                          "txtContent": "=if(startsWith([$topic],'_'),substring([$topic],1,length(split([$topic],''))),[$topic])"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "elmType": "div",
              "style": {
                "display": "flex",
                "position": "absolute",
                "z-index": "20",
                "right": "5px",
                "bottom": "10px",
                "flex-direction": "column",
                "align-items": "flex-end",
                "justify-content": "flex-end",
                "height": "100%"
              },
              "children": [
                {
                  "elmType": "div",
                  "style": {
                    "display": "flex",
                    "flex-direction": "row",
                    "padding": "5px 10px",
                    "border-radius": "20px",
                    "align-items": "center"
                  },
                  "attributes": {
                    "class": "ms-bgColor-themeLight"
                  },
                  "children": [
                    {
                      "elmType": "span",
                      "attributes": {
                        "class": "sp-css-color-white",
                        "iconName": "InternetSharing"
                      },
                      "style": {
                        "padding-right": "5px"
                      }
                    },
                    {
                      "elmType": "span",
                      "txtContent": "[$Signal]"
                    }
                  ]
                }
              ]
            },
            {
              "elmType": "div",
              "style": {
                "position": "relative",
                "display": "flex",
                "flex-direction": "row",
                "justify-content": "flex-start",
                "align-items": "flex-start",
                "padding": "10px 0px 10px 16px"
              },
              "children": [
                {
                  "elmType": "div",
                  "attributes": {
                    "class": "ms-borderColor-neutralLight ms-fontColor-neutralPrimary"
                  },
                  "style": {
                    "position": "relative",
                    "display": "flex",
                    "flex-shrink": "0",
                    "width": "80px",
                    "height": "80px",
                    "border-width": "1px",
                    "border-style": "solid",
                    "flex-direction": "column",
                    "align-items": "center",
                    "text-align": "center",
                    "justify-content": "center",
                    "margin-right": "20px"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "txtContent": "=if(getDate([$Modified]) > 0, if(getMonth([$Modified]) == 0, 'JAN', if(getMonth([$Modified]) == 1, 'FEB', if(getMonth([$Modified]) == 2, 'MAR', if(getMonth([$Modified]) == 3, 'APR',if(getMonth([$Modified]) == 4, 'MAY',if(getMonth([$Modified]) == 5, 'JUN',if(getMonth([$Modified]) == 6, 'JUL',if(getMonth([$Modified]) == 7, 'AUG',if(getMonth([$Modified]) == 8, 'SEP',if(getMonth([$Modified]) == 9, 'OCT',if(getMonth([$Modified]) == 10, 'NOV','DEC'))))))))))),if(getMonth([$Created]) == 0, 'JAN', if(getMonth([$Created]) == 1, 'FEB', if(getMonth([$Created]) == 2, 'MAR', if(getMonth([$Created]) == 3, 'APR',if(getMonth([$Created]) == 4, 'MAY',if(getMonth([$Created]) == 5, 'JUN',if(getMonth([$Created]) == 6, 'JUL',if(getMonth([$Created]) == 7, 'AUG',if(getMonth([$Created]) == 8, 'SEP',if(getMonth([$Created]) == 9, 'OCT',if(getMonth([$Created]) == 10, 'NOV','DEC'))))))))))))",
                      "style": {
                        "font-size": "15px",
                        "font-weight": "400"
                      }
                    },
                    {
                      "elmType": "div",
                      "txtContent": "=if(getDate([$Modified]) > 0, getDate([$Modified]),getDate([$Created]))",
                      "style": {
                        "font-size": "28px",
                        "font-weight": "600"
                      }
                    }
                  ]
                },
                {
                  "elmType": "div",
                  "style": {
                    "padding": "0 16px",
                    "display": "flex",
                    "flex-direction": "column",
                    "justify-content": "flex-start",
                    "align-items": "flex-start"
                  },
                  "children": [
                    {
                      "elmType": "div",
                      "style": {
                        "display": "inline-block",
                        "max-width": "700px",
                        "max-height": "55px",
                        "padding-bottom": "40px",
                        "font-size": "25px",
                        "font-weight": "600",
                        "-webkit-line-clamp": "2",
                        "overflow": "hidden",
                        "text-overflow": "ellipsis",
                        "font-family": "serif"
                      },
                      "children": [
                        {
                          "elmType": "span",
                          "txtContent": "[$Title]"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }