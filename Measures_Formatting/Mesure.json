{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {
    "font-size": "15px",
    "font-weight": "bold"
  },
  "txtContent": "@currentField",
  "customCardProps": {
    "openOnEvent": "hover",
    "directionalHint": "leftCenter",
    "isBeakVisible": true,
    "formatter": {
      "elmType": "div",
      "style": {
        "font-size": "14px",
        "border": "rounded",
        "border-radius": "5px",
        "padding": "=if([$Explication] == '', '0', '10px')",
        "width": "400px",
        "background-color": "lightBlue",
        "display": "=if([$Explication] == '', 'none', '')"
      },
      "txtContent": "[$Explication]"
    }
  }
}