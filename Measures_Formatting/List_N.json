{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
  "hideColumnHeader": false,
  "hideSelection": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "column",
      "align-items": "flex-start"
    },
    "children": [
      {
        "elmType": "div",
        "attributes": {
          "class": "ms-bgColor-themePrimary ms-fontColor-white"
        },
        "style": {
          "position": "sticky",
          "display": "=if(@rowIndex == 0, 'flex', 'none')",
          "font-weight": "bold",
          "font-size": "18px",
          "width": "100%",
          "padding": "20px 4px"
        },
        "children": [
          {
            "elmType": "div",
            "txtContent": "",
            "style": {
              "width": "100px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Maatregel",
            "style": {
              "flex-grow": "1",
              "min-width": "155px",
              "padding-left": "15px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Status",
            "style": {
              "width": "155px",
              "display": "=if(@window.innerWidth < 1500, 'none', '')"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Soort",
            "style": {
              "width": "155px",
              "display": "=if(@window.innerWidth < 1500, 'none', '')"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Wie?",
            "style": {
              "width": "155px",
              "display": "=if(@window.innerWidth < 1500, 'none', '')"
            }
          },
          {
            "elmType": "div",
            "txtContent": "Processtap",
            "style": {
              "width": "155px",
              "display": "=if(@window.innerWidth < 1500, 'none', '')"
            }
          }
          
        ]
      },
      {
        "elmType": "div",
        "attributes": {
          "class": "ms-borderColor-neutralQuaternary ms-bgColor-themeLighter--hover"
        },
        "style": {
          "display": "flex",
          "font-size": "16px",
          "width": "100%",
          "padding": "0 4px",
          "border-bottom-width": "1px",
          "border-bottom-style": "solid"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "width": "100px",
              "height": "[$field_8].height",
              "display": "flex",
              "flex-direction": "column",
              "justify-content": "center"
            },
            "children": [
              {
                "elmType": "button",
                "customRowAction": {
                  "action": "defaultClick"
                },
                "attributes": {
                  "title": "Details",
                  "class": "ms-bgColor-white ms-bgColor-themeDark--hover "
                },
                "style": {
                  "border": "1px rounded #00368a",
                  "position": "relative",
                  "display": "flex",
                  "flex-direction": "column",
                  "justify-content": "center",
                  "align-items": "center",
                  "border-radius": "100%",
                  "margin": "5px 24px",
                  "width": "50px",
                  "height": "50px",
                  "cursor": "pointer",
                  "box-sizing": "border-box",
                  "overflow": "hidden",
                  "text-overflow": "ellipsis"
                },
                "children": [
                  {
                    "elmType": "span",
                    "style": {
                      "position": "relative",
                      "width": "50px",
                      "height": "50px",
                      "border-radius": "100%",
                      "padding-top": "8px"
                    },
                    "attributes": {
                      "iconName": "Info",
                      "class": "ms-font-xxl ms-fontColor-themePrimary ms-fontColor-white--hover"
                    }
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "txtContent": "[$Title]",
            "style": {
              "flex-grow": "1",
              "min-width": "150px",
              "display": "flex",
              "flex-direction": "column",
              "justify-content": "center",
              "padding-left": "5px",
              "font-size": "15px",
              "font-weight": "bold"
            },
            "customCardProps": {
              "openOnEvent": "hover",
              "directionalHint": "leftCenter",
              "isBeakVisible": true,
              "formatter": {
                "elmType": "div",
                "style": {
                  "font-size": "18px",
                  "border": "rounded",
                  "border-radius": "5px",
                  "padding": "=if([$Toelichting] == '', '0', '20px')",
                  "width": "400px",
                  "background-color": "#D6E2E0 ",
                  "color": "black",
                  "display": "=if([$Toelichting] == '', 'none', '')"
                },
                "txtContent": "[$Toelichting]"
              }
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$field_10]",
            "style": {
              "width": "150px",
              "display": "=if(@window.innerWidth < 1500, 'none', 'flex')",
              "flex-direction": "column",
              "justify-content": "center",
              "padding-left": "5px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$field_4]",
            "style": {
              "width": "150px",
              "display": "=if(@window.innerWidth < 1500, 'none', 'flex')",
              "flex-direction": "column",
              "justify-content": "center",
              "padding-left": "5px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$field_6]",
            "style": {
              "width": "150px",
              "display": "=if(@window.innerWidth < 1500, 'none', 'flex')",
              "flex-direction": "column",
              "justify-content": "center",
              "padding-left": "5px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$field_8]",
            "style": {
              "width": "150px",
              "display": "=if(@window.innerWidth < 1500, 'none', 'flex')",
              "flex-direction": "column",
              "justify-content": "center",
              "padding-left": "5px"
            }
          }
          
        ]
      }
    ]
  }
}